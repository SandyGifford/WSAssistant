{
	"compilerOptions": {
		"module": "umd" ,
		"target": "ES2015",
		"noUnusedLocals": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"jsx": "react",
		"sourceMap": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"allowJs": true,
		"outDir": "dist",
		"declaration": true,
	},
	"files": [ "src/index.ts" ],
	"exclude": [ "dist" ]
}
